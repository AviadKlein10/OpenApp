<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyNoActionBar"
    android:background="@drawable/login_bg"
    tools:context=".activities.SplashActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="146dp"
            android:visibility="gone"/>




            <aviv.myicebreaker.module.CircularImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:id="@+id/imgProfilePic"
                android:src="@drawable/mip"
                android:contentDescription="profile_pic"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
            </aviv.myicebreaker.module.CircularImageView>


        <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="s"
                android:id="@+id/buttonUserDetails"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:background="@color/facebookBlue"
        android:visibility="visible"
        android:id="@+id/layoutSignIn"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.52"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/txtSignWithFacebook"
                android:textColor="#ffffff"
                android:text="הרשם באמצעות פייסבוק"
                android:layout_gravity="right"
                android:paddingRight="12sp"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.24"
            android:gravity="center">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:id="@+id/imageView"
                android:layout_gravity="left"
                android:src="@drawable/facebook_login" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>